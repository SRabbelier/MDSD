define pipe reverse
input 
	$out becomes first applied.
	$rest becomes rest applied.


	// if implicit isEmpty
	// if true
	// if implicit isSize 5
	// if isFive 4 and implicit isEmpty
	// if $stream isFive 4
	// if emptyness of $stream
	if $stream isEmpty
	else
		$rest becomes reverse applied to $rest.
	endif
	
	$out becomes join applied to $rest and $out.
output: $out


define pipe first
input
	$first and $rest become split, using
		2 as from
		, applied.
output: $first

define pipe rest
input
	$out and $rest become split, using
		2 as from
		, applied.
output: $rest
 